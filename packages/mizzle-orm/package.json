{
  "name": "@mizzle-dev/orm",
  "version": "0.0.1",
  "description": "Mizzle ORM - MongoDB ORM with exceptional DX",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules .turbo",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mongodb",
    "orm",
    "database",
    "typescript",
    "mizzle-orm",
    "type-safe",
    "schema",
    "nosql"
  ],
  "author": "Mizzle Dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mizzle-dev/mizzle-orm"
  },
  "bugs": {
    "url": "https://github.com/mizzle-dev/mizzle-orm/issues"
  },
  "homepage": "https://orm.mizzle.dev",
  "dependencies": {
    "mongodb": "^7.0.0",
    "nanoid": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/ui": "^4.0.12",
    "eslint": "^9.39.1",
    "mongodb-memory-server": "^10.3.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.12"
  },
  "peerDependencies": {
    "mongodb": ">=6.0.0"
  }
}
